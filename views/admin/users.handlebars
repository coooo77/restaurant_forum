<h1 class="mb-0">餐廳後台</h1>
<div class="mb-1">
  <a href="/admin/restaurants">Restaurants</a> | <a href="/admin/users">Users</a>
</div>

<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.email}}</td>
        <td>
          {{#if this.isAdmin}}
            admin
          {{else}}
            user
          {{/if}}
        </td>
        <td>
          {{#if this.isAdmin}}
            set as user
          {{else}}
            set as admin
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>